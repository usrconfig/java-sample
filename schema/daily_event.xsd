<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="DailyEventInfo">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="DailyChallenges" type="DailyChallenge"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="DailyChallenge">
        <xs:sequence>
            <xs:element ref="DailyEvent" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
    <xs:element name="DailyEvent">
        <xs:complexType>
            <xs:attribute name="StageIndex" type="xs:string"/>
            <xs:attribute name="GroupIndex" type="xs:string"/>
            <xs:attribute name="GroupImage" type="xs:string"/>
            <xs:attribute name="EventName" type="xs:string"/>
            <xs:attribute name="StageName" type="xs:string"/>
            <xs:attribute name="BattleBG" type="xs:string"/>
            <xs:attribute name="MonsterIndex" type="xs:string"/>
            <xs:attribute name="Reward" type="xs:string"/>
            <xs:attribute name="Chance" type="xs:int"/>
            <xs:attribute name="Duration" type="xs:string"/>
        </xs:complexType>
    </xs:element>
</xs:schema>